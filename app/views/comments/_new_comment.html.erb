<% if user_signed_in? %>
  <%= form_with(model: [@post, @comment], url: post_comments_path, method: "post", local: true) do |form| %>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% else %>
  Please sign in to post to the feed!
<% end %>